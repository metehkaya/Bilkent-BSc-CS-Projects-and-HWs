<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="GUI.ServicerPanel"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="40" right="20" bottom="40" left="20"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="TITLE HERE" GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER" fx:id = "titleLabel">
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>



    <Button fx:id="addButton1" text="Add"
            prefWidth="80" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
            onAction="#handleAddButtonAction1">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>

    <Label text="Item 1 HERE" GridPane.columnIndex="0"
           GridPane.rowIndex="1" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER" fx:id = "itemLabel1">
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <Label text="Price 1 HERE" GridPane.columnIndex="0"
           GridPane.rowIndex="1" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="RIGHT" fx:id = "priceLabel1">
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>



    <Button fx:id="addButton2" text="Add"
            prefWidth="80" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="2"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
            onAction="#handleAddButtonAction2">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>

    <Label text="Item 2 HERE" GridPane.columnIndex="0"
           GridPane.rowIndex="2" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER" fx:id = "itemLabel2">
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <Label text="Price 2 HERE" GridPane.columnIndex="0"
           GridPane.rowIndex="2" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="RIGHT" fx:id = "priceLabel2">
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>



    <Button fx:id="addButton3" text="Add"
            prefWidth="80" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="3"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
            onAction="#handleAddButtonAction3">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>

    <Label text="Item 3 HERE" GridPane.columnIndex="0"
           GridPane.rowIndex="3" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER" fx:id = "itemLabel3">
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <Label text="Price 3 HERE" GridPane.columnIndex="0"
           GridPane.rowIndex="3" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="RIGHT" fx:id = "priceLabel3">
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>



    <Button fx:id="backButton" text="Back"
            prefWidth="80" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
            onAction="#handleBackButtonAction">
        <GridPane.margin>
            <Insets top="0" right="100" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>



    <Button fx:id="payButton" text="Pay"
            prefWidth="80" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="RIGHT"
            onAction="#handlePayButtonAction">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="100"></Insets>
        </GridPane.margin>
    </Button>

</GridPane>