<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="GUI.LeaderboardPanel"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="40" right="20" bottom="40" left="20"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <Label text="FeedMe Leaderboard" GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <Label text="1. Cabbar Tokgezen" GridPane.columnIndex="0"
           GridPane.rowIndex="1" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER">
    </Label>

    <Label text="2. Elif Koftehor" GridPane.columnIndex="0"
           GridPane.rowIndex="2" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER">
    </Label>

    <Label text="3. Ahmet Vezirparmagi" GridPane.columnIndex="0"
           GridPane.rowIndex="3" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER">
    </Label>


    <Label text="4. Merve Kadayif" GridPane.columnIndex="0"
           GridPane.rowIndex="4" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER">
    </Label>


    <Label text="5. Mert Oturtma" GridPane.columnIndex="0"
           GridPane.rowIndex="5" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER">
    </Label>

    <Button fx:id="backButton" text="Back"
            prefWidth="200" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="6"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER" onAction="#handleBackButtonAction">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>
</GridPane>